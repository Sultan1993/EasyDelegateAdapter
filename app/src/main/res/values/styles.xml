<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorInputBackground</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius</item>
        <item name="boxStrokeColor">@color/colorInputBackground</item>
    </style>

    <style name="OutlinedMaterialCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/cardStrokeColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextAppearance.Base" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.Headline4" parent="TextAppearance.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TitleSection" parent="TextAppearance.Base">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

</resources>
